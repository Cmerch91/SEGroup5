<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGroup5.Views.Readings"
             Title="Readings">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Readings at 12:00 PM" FontSize="20" FontAttributes="Bold" />
        <CollectionView x:Name="ReadingsView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>