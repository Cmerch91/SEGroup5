<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGroup5.Views.AirMonitorPage"
             Title="Air Sensor Monitor">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Air Sensor Monitor" FontSize="28" HorizontalOptions="Center" />

            <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" />

            <HorizontalStackLayout Spacing="10">
                <Label Text="Status: " FontAttributes="Bold" />
                <Label Text="{Binding Status}" />
            </HorizontalStackLayout>


                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Quantity}" FontAttributes="Bold" />
                    <HorizontalStackLayout>
                        <Label Text="Unit: " FontAttributes="Bold" />
                        <Label Text="{Binding Unit}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Frequency: " FontAttributes="Bold" />
                        <Label Text="{Binding Frequency}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Safe Level: " FontAttributes="Bold" />
                        <Label Text="{Binding SafeLevel}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>



                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Quantity2}" FontAttributes="Bold" />
                    <HorizontalStackLayout>
                        <Label Text="Unit: " FontAttributes="Bold" />
                        <Label Text="{Binding Unit2}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Frequency: " FontAttributes="Bold" />
                        <Label Text="{Binding Frequency2}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Safe Level: " FontAttributes="Bold" />
                        <Label Text="{Binding SafeLevel2}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>



                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Quantity3}" FontAttributes="Bold" />
                    <HorizontalStackLayout>
                        <Label Text="Unit: " FontAttributes="Bold" />
                        <Label Text="{Binding Unit3}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Frequency: " FontAttributes="Bold" />
                        <Label Text="{Binding Frequency3}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Safe Level: " FontAttributes="Bold" />
                        <Label Text="{Binding SafeLevel3}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>



                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Quantity4}" FontAttributes="Bold" />
                    <HorizontalStackLayout>
                        <Label Text="Unit: " FontAttributes="Bold" />
                        <Label Text="{Binding Unit4}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Frequency: " FontAttributes="Bold" />
                        <Label Text="{Binding Frequency4}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Safe Level: " FontAttributes="Bold" />
                        <Label Text="{Binding SafeLevel4}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
