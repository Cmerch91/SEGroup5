<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SEGroup5.ViewModels"
             x:Class="SEGroup5.Views.UsersPage"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="Users">

    <ContentPage.BindingContext>
        <viewmodels:UsersPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add User"
                Command="{Binding AddUserCommand}"
                IconImageSource="{FontImage Glyph='+', Color=Black, Size=22}"/>
        <ToolbarItem Text="Load Users"
                Command="{Binding LoadUsersCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Roles:" FontSize="32" HorizontalOptions="Center" />
            <Label Text="Roles:" FontSize="18" HorizontalOptions="Center" />

            <Grid ColumnSpacing="10" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="UserID" Grid.Column="0" FontAttributes="Bold" />
                <Label Text="User Role" Grid.Column="1" FontAttributes="Bold" />
                <Label Text="Firstname" Grid.Column="2" FontAttributes="Bold" />
                <Label Text="Lastname" Grid.Column="3" FontAttributes="Bold" />
                <Label Text="Email" Grid.Column="4" FontAttributes="Bold" />
                <Label Text="Password" Grid.Column="5" FontAttributes="Bold" />
            </Grid>

            <CollectionView ItemsSource="{Binding Users}"
            x:Name="usersCollection"
            SelectionMode="Single"
            SelectionChangedCommand="{Binding SelectUserCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnSpacing="100">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding UserID}" Grid.Column="0" />
                            <Label Text="{Binding UserRole}" Grid.Column="1" />
                            <Label Text="{Binding Firstname}" Grid.Column="2" />
                            <Label Text="{Binding Lastname}" Grid.Column="3" />
                            <Label Text="{Binding Email}" Grid.Column="4" />
                            <Label Text="{Binding Password}" Grid.Column="5" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button 
            Padding="20"
            Text="Back"
            Clicked="OnNavigateBack"
            />

        </StackLayout>
    </ScrollView>
</ContentPage>