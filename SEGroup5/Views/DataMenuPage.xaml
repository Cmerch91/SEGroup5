<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGroup5.Views.DataMenuPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnBackClicked" />
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
                <StackLayout Padding="20" Spacing="15">

        <Label 
            Text="Data Menu" 
            FontSize="32" 
            HorizontalOptions="Center" />
        <Label 
            Text="Select which table you would like to query"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            Text="Air Quality"
            Clicked="OnNavigateToAirQualityPage" />
        <Button 
            Text="Water Quality"
            Clicked="OnNavigateToWaterQualityPage" />
        <Button 
            Text="Weather"
            Clicked="OnNavigateToWeatherPage" />

            </StackLayout>
    </VerticalStackLayout>
</ContentPage>