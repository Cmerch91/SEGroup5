<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGroup5.Views.ConfigWeatherSensorPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnBackClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Edit Weather Sensor" FontSize="28" HorizontalOptions="Center" />

            <HorizontalStackLayout>
                <Label Text="Status:" FontAttributes="Bold" />
                <Picker ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding Status}" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Readings}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="8" Padding="0,10">

                            <Label Text="{Binding Quantity}" FontAttributes="Bold" />

                            <HorizontalStackLayout>
                                <Label Text="Frequency:" WidthRequest="100" />
                                <Picker ItemsSource="{Binding FrequencyOptions}" SelectedItem="{Binding Frequency}" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Update" Command="{Binding UpdateCommand}" />

        </StackLayout>
    </ScrollView>
</ContentPage>
